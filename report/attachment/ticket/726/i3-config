exec gnome-keyring-daemon -d
exec gnome-settings-daemon
exec --no-startup-id nm-applet
exec bluetooth-applet
exec ibus-daemon -d
exec /home/bruno/.dropbox-dist/dropboxd
exec volumeicon

# Other startpup applications
exec shutter --min_at_startup
exec pidgin
exec skype
exec google-chrome
exec checkgmail

# disable bluetooth by default
#exec rfkill block bluetooth

assign [class="Google-chrome"] 1
assign [class="Pidgin"] 3
assign [class="Skype"] 3

## Colours
##---------
#colourclass        border      bckgrnd     text        indicator
client.focused      #b40404     #8a0808     #ffffff     #2e9ef4



for_window [class="Nautilus" instance="file_progress"] floating enable


