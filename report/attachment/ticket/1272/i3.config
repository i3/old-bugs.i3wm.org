# Options {{{
# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
#font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
#font pango: Terminus Bold Semi-Condensed 11
font -xos4-terminus-medium-r-normal-*-14-140-72-72-c-80-iso10646-1
#font pango: Ubuntu Mono 11

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	status_command $HOME/bin/conky-i3bar
	mode dock
	position top
	tray_output primary
	workspace_buttons yes
	colors {
		background #121212
		statusline #605c5a
		focused_workspace #101010 #101010 #b72f62
		active_workspace #5f5f5f #101010 #101010
		inactive_workspace #101010 #101010 #5f5f5f
		urgent_workspace #2e3436 #9a878f
	}
}

# Move workspaces to specific screens
workspace "1:Main" output VGA-0
workspace "3:IRC" output VGA-0
workspace "5:Web" output VGA-0

workspace "2:Web" output DVI-I-1
workspace "4:Dev" output DVI-I-1
workspace "6:Misc" output DVI-I-1
workspace "8:Games" output DVI-I-1

# Colors
#class                  border   backgr.  text
client.focused          #605c5a #605c5a #825969
client.focused_inactive #333333 #333333 #999999
client.unfocused        #333333 #333333 #999999
client.urgent           #cd989a #cd989a #2e3436
client.background       #ffffff
# #333333 formerly #191919

# Set window style
new_window 1pixel
new_float 1pixel

# Quickly switch back to last workspace
workspace_auto_back_and_forth yes

# Disable pointer warping on focus change
mouse_warping none
# Focus follows the mouse pointer
focus_follows_mouse yes

# Special treatment for some applications
assign [class="^URxvt$" instance="^weechat$"] "3:IRC"
assign [class="^Steam$"] "8:Games"
for_window [class="^URxvt$" instance="^mpd$"] move scratchpad

# Startup
exec compton
exec urxvtd
exec dropboxd
exec redshift -l 50.990710:14.348145
exec ~/Devel/dunst/dunst

#exec --no-startup-id steam

