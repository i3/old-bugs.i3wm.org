# This configuration uses Mod4 and Mod3. Make sure they are mapped properly using xev(1)
# and xmodmap(1). Usually, Mod4 is Alt (Alt_L) and Mod3 is Windows (Super_L)

# ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
#font xft:Droid Sans Mono:size=10

# Use Mouse+Mod4 to drag floating windows to their wanted position
floating_modifier Mod4

# Fullscreen (Mod4+f)
bindsym Mod4+f f
#bind Mod4+41 f
#bindsym Mod4+Mode_switch+f f
#bind Mod4+Mode_switch+41 f

# Stacking (Mod4+h)
bindsym Mod4+s s
#bindsym Mod4+Mode_switch+s s

# Tabbed (Mod4+w)
bindsym Mod4+a T
#bindsym Mod4+Mode_switch+a T

# Default (Mod4+e)
bindsym Mod4+d d
#bindsym Mod4+Mode_switch+d d

# Toggle tiling/floating of the current window (Mod4+Shift+Space)
bind Mod4+Shift+65 t
#bind Mod4+Shift+Mode_switch+65 t

# Go into the tiling layer / floating layer, depending on whether
# the current window is tiling / floating (Mod4+t)
bind Mod4+28 focus ft
#bind Mod4+Mode_switch+28 focus ft

# Focus (Mod4+j/k/l/;)
bindsym Mod4+h h
bindsym Mod4+j j
bindsym Mod4+k k
bindsym Mod4+l l
#bindsym Mod4+Mode_switch+h h
#bindsym Mod4+Mode_switch+j j
#bindsym Mod4+Mode_switch+k k
#bindsym Mod4+Mode_switch+l l
# (alternatively, you can use the cursor keys:)
bindsym Mod4+Left h
bindsym Mod4+Down j
bindsym Mod4+Up k
bindsym Mod4+Right l
#bindsym Mod4+Mode_switch+Left h
#bindsym Mod4+Mode_switch+Down j
#bindsym Mod4+Mode_switch+Up k
#bindsym Mod4+Mode_switch+Right l

# Focus Container (Mod3+j/k/l/;)
#bindsym Mod4+h wch
#bindsym Mod4+j wcj
#bindsym Mod4+k wck
#bindsym Mod4+l wcl
# (alternatively, you can use the cursor keys:)
#bindsym Mod4+Left wch
#bindsym Mod4+Down wcj
#bindsym Mod4+Up wck
#bindsym Mod4+Right wcl

# Snap (Mod4+Control+j/k/l/;)
bind Mod4+Control+43 sh
bind Mod4+Control+44 sj
bind Mod4+Control+45 sk
bind Mod4+Control+46 sl
# (alternatively, you can use the cursor keys:)
bindsym Mod4+Control+Left sh
bindsym Mod4+Control+Down sj
bindsym Mod4+Control+Up sk
bindsym Mod4+Control+Right sl

# Move (Mod4+Shift+j/k/l/;)
bind Mod4+Shift+43 mh
bind Mod4+Shift+44 mj
bind Mod4+Shift+45 mk
bind Mod4+Shift+46 ml
# (alternatively, you can use the cursor keys:)
bindsym Mod4+Shift+Left mh
bindsym Mod4+Shift+Down mj
bindsym Mod4+Shift+Up mk
bindsym Mod4+Shift+Right ml

# Move Container (Mod3+Shift+j/k/l/;)
bind Mod3+Shift+43 wcmh
bind Mod3+Shift+44 wcmj
bind Mod3+Shift+45 wcmk
bind Mod3+Shift+46 wcml

# Workspaces (Mod4+1/2/…)
bind Mod4+10 1
bind Mod4+11 2
bind Mod4+12 3
bind Mod4+13 4
bind Mod4+14 5
bind Mod4+15 6
bind Mod4+16 7
bind Mod4+17 8
bind Mod4+18 9
bind Mod4+19 10

# Move to Workspaces
bind Mod4+Shift+10 m1
bind Mod4+Shift+11 m2
bind Mod4+Shift+12 m3
bind Mod4+Shift+13 m4
bind Mod4+Shift+14 m5
bind Mod4+Shift+15 m6
bind Mod4+Shift+16 m7
bind Mod4+Shift+17 m8
bind Mod4+Shift+18 m9
bind Mod4+Shift+19 m10

# Mod4+Enter starts a new terminal
bind Mod4+36 exec /usr/bin/urxvt
#bind Mod4+Mode_switch+36 exec /usr/bin/urxvt

# Mod4+Shift+q kills the current client
bindsym Mod4+Shift+c kill
#bindsym Mod4+Shift+Mode_switch+c kill

# Mod4+v starts dmenu and launches the selected application
# for now, we don’t have an own launcher
bind Mod4+27 exec /usr/bin/dmenu_run
#bind Mod4+Mode_switch+27 exec /usr/bin/dmenu_run

# Mod4+Shift+e exits i3
bindsym Mod4+Shift+e exit
#bindsym Mod4+Shift+Mode_switch+e exit

# Mod4+Shift+r restarts i3 inplace
bindsym Mod4+Shift+r restart
#bindsym Mod4+Shift+Mode_switch+r restart

#############################################################
# DELETE THE FOLLOWING LINES TO DISABLE THE WELCOME MESSAGE #
#############################################################
#exec xmessage -file /etc/i3/welcome
