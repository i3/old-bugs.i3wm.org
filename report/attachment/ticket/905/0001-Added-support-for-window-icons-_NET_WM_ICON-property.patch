+#ifdef USE_ICONS
+/*
+ * Copy icon pixels, use background color where alpha==0
+ */
+void copy_with_transparency(uint32_t *dst, uint32_t* src, uint32_t background)
+{
+    int i;
+    for(i=0; i < 16*16; ++i) {
+    	uint32_t color = *src;
+    	if (((color>>24) & 0xff)==0) {
+    		color = background;
+    	}
+    	*dst++ = color;
+    	++src;
+    }
+}
+#endif
